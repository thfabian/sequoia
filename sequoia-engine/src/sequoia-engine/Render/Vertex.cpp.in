namespace {

static const char* typeToString(VertexLayout::Type type) {
  switch(type) {
  case VertexLayout::Invalid:
    return "Invalid";
  case VertexLayout::UInt8:
    return "Uint8";
  case VertexLayout::Float32:
    return "Float32";
  default:
    sequoia_unreachable("invalid type");
  }
}

template <class T>
std::string elementToString(const T& value) {
  return std::to_string(value);
}

template <>
std::string elementToString<std::uint8_t>(const std::uint8_t& value) {
  return std::to_string(static_cast<int>(value));
}

template <class T, std::size_t N>
std::string arrayToString(const T (&vec)[N]) {
  std::stringstream ss;
  ss << "[ ";
  for(int i = 0; i < N; ++i)
    ss << elementToString(vec[i]) << (i != N - 1 ? ", " : "");
  ss << " ]";
  return ss.str();
}

} // anonymous namespace

VertexLayout::~VertexLayout() {}

std::string VertexLayout::toString() const {
  std::stringstream ss;
  ss << "VertexLayout[\n";

  auto attributeToString = [&ss](const char* name, const Attribute& attrib) {
    ss << "  " << name << " = Attribute[\n";
    ss << "    Type = " << typeToString(attrib.Type) << ",\n";
    ss << "    Offset = " << attrib.Offset << ",\n";
    ss << "    NumElements = " << attrib.NumElements << ",\n";
    ss << "    Normalized = " << attrib.Normalized << "\n";
    ss << "  ]\n";
  };

  if(hasPosition())
    attributeToString("Position", Position);

  if(hasNormal())
    attributeToString("Normal", Normal);

  if(hasTexCoord())
    attributeToString("TexCoord", TexCoord);

  if(hasColor())
    attributeToString("Color", Color);

  ss << "]";
  return ss.str();
}

} // namespace render

